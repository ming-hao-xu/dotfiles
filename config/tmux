# Use tmux's own terminfo entry and enable truecolor early
set -g default-terminal "tmux-256color"
set -as terminal-features ",*:RGB"
set -ga update-environment "COLORTERM"

# Use CTRl-a as prefix key
unbind C-b
set -g prefix C-a

# Use prefix-r to reload config
bind r source-file ~/.config/tmux/tmux.conf \; display-message "tmux.conf reloaded"

# Enable mouse support
set -g mouse on

# Use prefix-h and prefix-v to split panes
unbind %
unbind '"'
bind v split-window -h -c "#{pane_current_path}"
bind h split-window -v -c "#{pane_current_path}"

# Automatically renumber windows
set -g renumber-windows on

# Put satus bar to top
set -g status-position top

# Index starts at 1
set -g base-index 1
set -g pane-base-index 1

# vi copy mode
bind -T copy-mode-vi v send -X begin-selection
bind -T copy-mode-vi y send-keys -X copy-pipe-and-cancel "pbcopy"
bind P paste-buffer
bind -T copy-mode-vi MouseDragEnd1Pane send-keys -X copy-pipe-and-cancel "pbcopy"

# List of plugins
set -g @plugin 'tmux-plugins/tpm'
set -g @plugin 'tmux-plugins/tmux-sensible'
set -g @plugin 'catppuccin/tmux'

# catppuccin config
set -g @catppuccin_status_left_separator " █"
set -g @catppuccin_window_right_separator "█ "
set -g @catppuccin_window_default_text "#W"
set -g @catppuccin_window_current_text "#W"
set -g @catppuccin_status_modules_right "session host"
set -g @catppuccin_status_connect_separator "no"
set -g @catppuccin_host_text "MacBook"
set -g @catppuccin_flavor 'frappe'

# Initialize TMUX plugin manager (keep this line at the very bottom of tmux.conf)
run '~/.tmux/plugins/tpm/tpm'
